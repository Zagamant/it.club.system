                <div class="user-profile">
                    <NavLink href="#" class="nav-item nav-link">
                        <img class="user-image" src="/assets/images/User (1).svg" />
                    </NavLink>
                    <NavLink href="#" class="nav-item nav-link">@($"{AccountService.User.Name} {AccountService.User.Surname}")</NavLink>
                </div>
            </div>
        </div>
