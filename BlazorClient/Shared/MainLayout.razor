@using BlazorClient.Services.AccountManagement
@inherits LayoutComponentBase
@inject IAccountService AccountService
@inject NavigationManager NavigationManager

@if (LoggedIn)
{
    <!-- nav -->
    <nav class="navbar navbar-expand navbar-light ">
        <div class="navbar-nav">

            <div class="home">
                <NavLink href="" Match="NavLinkMatch.All" class="nav-item nav-link" ><b>IT_Club</b></NavLink>
            </div>
            <div class="nav-menu">
                <NavLink href="users" class="nav-item nav-link">Список пользователей</NavLink>
                <NavLink href="#" class="nav-item nav-link">Список учащихся</NavLink>
