@page "/users/{id:int}"
@using BlazorClient.Services.AccountManagement
@inject IAccountService  AccountService





<div class="main-info">
    <div class="photo-card">
        <Figure Size="FigureSize.Is256x256">
            <FigureImage Source="/assets/images/User-photo.jpg" AlternateText="256x256" />
            <FigureCaption>
                <div class="card-title">
                    <Heading Size="HeadingSize.Is4">@($"{AccountService.User.Name} {AccountService.User.Surname}")</Heading>
                </div>
            </FigureCaption>
        </Figure>
    </div>
    <div class="info">
        <div class="Name">
            <DisplayHeading Size="DisplayHeadingSize.Is2">
                @($"{AccountService.User.Name} {AccountService.User.Surname}")
            </DisplayHeading>
        </div>
        <div class="tables">
            <div class="firstTable">
                <Table Borderless="true">
                    <TableBody>
                        <TableRow>
                            <TableRowHeader> <b>Клуб:</b></TableRowHeader>
                            <TableRowCell></TableRowCell>
                            <TableRowCell></TableRowCell>
                            <TableRowCell>Серебронск</TableRowCell>
                        </TableRow>
                        <TableRow>
                            <TableRowHeader><b>Имя Фамилия:</b></TableRowHeader>
                            <TableRowCell></TableRowCell>
                            <TableRowCell></TableRowCell>
                            <TableRowCell>Пупкин лупкин</TableRowCell>
                        </TableRow>
                        <TableRow>
                            <TableRowHeader><b>Номер телефона:</b></TableRowHeader>
                            <TableRowCell></TableRowCell>
                            <TableRowCell></TableRowCell>
                            <TableRowCell>+375 33 658 62 62</TableRowCell>
                        </TableRow>
                        <TableRow>
                            <TableRowHeader><b>Список курсов:</b></TableRowHeader>
                            <TableRowCell></TableRowCell>
                            <TableRowCell></TableRowCell>
                            <TableRowCell> Много курсов</TableRowCell>
                        </TableRow>
                    </TableBody>
                </Table>
            </div>
            <div class="secondTable">
                <Table Borderless="true">
                    <TableBody>
                        <TableRow>
                            <TableRowHeader><b>Контакты:</b></TableRowHeader>
                            <TableRowCell></TableRowCell>
                            <TableRowCell></TableRowCell>
                            <TableRowCell> Контакты</TableRowCell>
                        </TableRow>
                        <TableRow>
                            <TableRowHeader><b>Другая информация :</b></TableRowHeader>
                            <TableRowCell></TableRowCell>
                            <TableRowCell></TableRowCell>
                            <TableRowCell> Информация</TableRowCell>
                        </TableRow>
                    </TableBody>
                </Table>
            </div>
        </div>
    </div>
</div>






@code {
    [Parameter]
    public int Id { get; set; }

    protected override void OnInitialized()
    {
        base.OnInitialized();
    }

}
